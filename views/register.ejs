<header>
  <nav class="header">
    <h1>DSYSTEM</h1>
    <div class="links">
      <a href="#">Beginnig</a>
      <a href="#">services</a>
      <a href="#">about</a>
    </div>
    <div class="actions">
      <a href="/login">Sing In</a>
      <a href="/register" id="su">Sing Up</a>
    </div>
  </nav>
</header>
<main>
  <img src="/assets/logo_blanco.png" alt="" srcset="" />
  <div class="formulario">
    <div class="Registro">
      <h3>Registro de Usuario</h3>
    </div>
    <form
      class="form"
      id="formulario-registro"
      method="POST"
      name="Formulario"
    >
      <div id="col-1" class="colum">
        <label for="Usuario">Tipo de usuario</label>
        <select name="userType" id="userType" class="select" required>
          <option value="">Seleccione</option>
          <option value="Paciente">Paciente</option>
          <option value="Empleado">Empleado</option>
        </select>
        <label for="Tipo_documento">Tipo de documento:</label>
        <select name="docType" id="docType" class="select" required>
          <option value="">Seleccione</option>
          <option value="C.C">C.C</option>
          <option value="Carnet diplomatico">Carnet diplomatico</option>
          <option value="Certificado nacido vivo">
            Certificado nacido vivo
          </option>
          <option value="Cedula de extranjeria">Cedula de extranjeria</option>
          <option value="Nit">Nit</option>
          <option value="Pasaporte">Pasaporte</option>
          <option value="Permiso especial de permanencia">
            Permiso especial de permanencia
          </option>
          <option value="Permiso de proteccion personal">
            Permiso de proteccion personal
          </option>
          <option value="Registro civil">Registro civil</option>
          <option value="Salvoconducto">Salvoconducto</option>
          <option value="Tarjeta de identidad">Tarjeta de identidad</option>
        </select>
        <label for="documento">Documento de identidad:</label>
        <input
          name="userId"
          type="userId"
          placeholder="Numero de documento de identidad"
          required
          maxlength="20"
          id="documento"
        />
        <label for="nombre">Nombre:</label>
        <input
          name="name"
          type="text"
          maxlength="45"
          required
          placeholder="Nombre..."
          id="name"
        />
        <label for="apellidos">Apellidos:</label>
        <input
          type="text"
          name="lastName"
          required
          placeholder="Apellidos..."
          id="lastname"
        />
        <label for="edad">Edad:</label>
        <input
          name="age"
          type="number"
          minlength="1"
          maxlength="3"
          required
          placeholder="Edad"
          id="age"
        />
        <label for="Genero">Genero:</label>
        <select
          name="gender"
          id="gender"
          placeholder="Genero"
          class="select"
          required
        >
          <option value="">Seleccione</option>
          <option value="Hombre">Hombre</option>
          <option value="Mujer">Mujer</option>
          <option value="Otros">Otros</option>
        </select>
      </div>
      <div class="colum">
        <label for="email">Email:</label>
        <input
          name="email"
          type="email"
          required
          placeholder="Email"
          id="email"
        />
        <label for="con_email">Confirmar email:</label>
        <input
          type="text"
          type="email"
          required
          placeholder="Confirmar"
          id="email2"
        />
        <label for="contraseña">Contraseña</label>
        <input
          name="password"
          type="password"
          required
          id="password"
        />
        <label for="con_contraseña">Confirmar contraseña</label>
        <input
          type="password"
          required
          id="password2"
        />
        <div class="send">
        <button type="submit" id="submit" class="enviar">Sign Up</button>
        <a class="ingreso" href="/login"
          >Ya te registraste? Inicia sesión aquí</a>
        </div>
      </div>
    </form>
  </div>
</main>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="/js/register.js"></script>

